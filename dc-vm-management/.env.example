# Database Configuration
DATABASE_URL=postgresql://dc_user:dc_password@localhost:5432/dc_vm_management
POSTGRES_DB=dc_vm_management
POSTGRES_USER=dc_user
POSTGRES_PASSWORD=dc_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# VM Configuration
DEFAULT_VM_MEMORY=2048
DEFAULT_VM_CPU=2
DEFAULT_VM_STORAGE=20

# Libvirt Configuration
LIBVIRT_URI=qemu:///system
LIBVIRT_SSH_USER=root

# Ansible Configuration
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_SSH_ARGS=-o StrictHostKeyChecking=no